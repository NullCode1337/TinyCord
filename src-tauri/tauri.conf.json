{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tinycord",
  "version": "1.0.0",
  "identifier": "com.nullcode1337.tinycord",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "TinyCord",
        "width": 300,
        "height": 300,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
